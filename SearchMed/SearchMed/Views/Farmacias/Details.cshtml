@model SearchMed.Models.Farmacia
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title =
    "Visualizando detalhes de um FARMÁCIA";
    }

<div class="alert panel panel-success">
    <div class="panel-heading">
        Visualizando detalhes de uma FARMÁCIA
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphiconglyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Nome,new{htmlAttributes = new{@class = "form-control",disabled = "disabled"}})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Endereco)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphiconglyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Telefone)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphiconglyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>

    </div>

    <div class="panel">
        @Html.ActionLink("Alterar", "Edit", new{id =Model.FarmaciaId}, new{@class = "btn btn-info" })
        @Html.ActionLink("Retornar para a listagem","Index", null, new{@class ="btn btn-success"})
    </div>
</div>
@Html.Partial("~/Views/Remedios/_PorFarmacia.cshtml", Model.Remedios.ToList())