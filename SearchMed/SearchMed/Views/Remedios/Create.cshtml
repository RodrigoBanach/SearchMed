@model SearchMed.Models.Remedio
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Registrando um novo Remédio";


}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="alert panel panel-success">
        <div class="panel-heading">
            Registro de um novo Remédio
        </div>
        <div class="panel-body">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "",new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Nome,htmlAttributes: new{@class ="control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nome,new{htmlAttributes = new{@class ="form-control", @autofocus="autofocus" }})
                        @Html.ValidationMessageFor(model =>model.Nome, "", new{@class ="text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Preco,"Preço", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Preco, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Preco, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.FarmaciaId,"Farmácia", htmlAttributes: new{@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.DropDownList("FarmaciaId", null,htmlAttributes: new{@class ="form-control"})
                        @Html.ValidationMessageFor(model =>model.FarmaciaId, "", new{@class ="text-danger"})
                    </div>
                </div>
            </div>
            <div class="panel">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Adicionar Remédio" class="btn btn-info" />
                    @Html.ActionLink("Retornar para a listagem de Remédios", "Index", null, new {@class = "btn btn-success" })
                </div>
                <br />
                <br />
            </div>
        </div>
    </div>
    }
@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liProdutos').addClass("active");
        });
    </script>
}
