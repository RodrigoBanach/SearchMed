@model IEnumerable<SearchMed.Models.Remedio>

<div class="panel panel-primary">
    <div class="panel-heading">
        Relação de Remédios registrados para a Farmácia
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        Remédio
                    </th>

                    <th>Farmácia</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>

                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>

                            @Html.DisplayFor(modelItem => item.Farmacia.Nome)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer panel-info">
    </div>
</div>