@model IEnumerable<SearchMed.Models.Remedio>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Listagem de REMÉDIOS";
}
@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
<div class="alert panel panel-success">
    <div class="panel-heading">
        Relação de REMÉDIOS registrados
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>

                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Preco)
                    </th>
                    <th>
                        Farmácia
                    </th>
                    <th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem =>item.RemedioId)
                        </td>
                        <td>

                            @Html.DisplayFor(modelItem =>item.Nome)
                        </td>
                        <td>

                            @Html.DisplayFor(modelItem => item.Preco)
                        </td>
                        <td>

                            @Html.DisplayFor(modelItem =>item.Farmacia.Nome)

                        </td>
                        <td>

                            @Html.ActionLink("Alterar","Edit", new{id = item.RemedioId}) |
                            @Html.ActionLink("Detalhes","Details", new{id = item.RemedioId}) |
                            @Html.ActionLink("Eliminar","Delete", new{id = item.RemedioId})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel">
        @Html.ActionLink("Registrar um novo Remédio", "Create",null, new { @class = "btn btn-success" })
    </div>
</div>

@section styles{
    <link href="@Url.Content("~/content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet">}
@section ScriptPage {
<script src="@Url.Content("~/scripts/DataTables/jquery.dataTables.js")" ></script>
    <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liRemedios').addClass("active");
            $('.table').dataTable({
                "order": [[1, "asc"]]
            });
        });
    </script>
}