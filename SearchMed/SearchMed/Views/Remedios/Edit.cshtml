@model SearchMed.Models.Remedio
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando os dados de um Remédio";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="alert panel panel-success">
        <div class="panel-heading">
            Alteração dos dados de um Remédio
        </div>
        <div class="panel-body">
            <div class="form-horizontal">
                <h4>Produto</h4>
                <hr />
                @Html.ValidationSummary(true, "",new { @class = "text-danger" })
                @Html.HiddenFor(model => model.RemedioId)
                <div class="form-group">
                    @Html.LabelFor(model => model.Nome,htmlAttributes: new{@class ="control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nome,new{htmlAttributes = new{@class ="form-control"}})
                        @Html.ValidationMessageFor(model =>model.Nome, "", new{@class ="text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Preco,"Preço" ,htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Preco, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.FarmaciaId,"Farmacia", htmlAttributes: new{@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.DropDownList("FarmaciaId", null,htmlAttributes: new{@class ="form-control"})
                        @Html.ValidationMessageFor(model =>model.FarmaciaId, "", new{@class ="text-danger"})
                    </div>
                </div>
                <div class="panel">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Gravar alterações" class="btn btn-info" />
                        @Html.ActionLink("Retornar para a listagem de um Remédio", "Index", null, new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liProdutos').addClass("active");
        });
    </script>
}